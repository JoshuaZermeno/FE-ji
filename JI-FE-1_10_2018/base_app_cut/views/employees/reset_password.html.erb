<% content_for :title, "Reset Password" %>
<div class="login-container animated fadeInDown" id="snow">

  <div class="login-box">
    <div class="login-logo"> <img src="images/pennicon.jpg" ></div>
    <div class="login-body">
      <div class="login-title"><strong>Reset</strong></div>
      <div class="form-group">
      <%= form_tag (''), controller: :employees, action: :reset_send, :method => 'post', :id => '_IDnum' do %>
        <div class="col-xl-12">
          <%= text_field_tag :IDnum, nil, placeholder: "ID Number", class: 'form-control' %>
        </div>
        <br/>
        <div class="col-xl-12">
          <%= submit_tag 'Submit', id: 'reset_password', class: 'btn btn-primary btn-block' %>
        </div> 
      <% end %>  
      </div>
		</div>
    <div class="login-footer">
      <div class="pull-left">
        &copy; 2017 Penn National Gaming
      </div>
      <div class="pull-right">
        <%= link_to 'Reset Password', controller: :employees, action: :reset_password %>
      </div>
    </div>
  </div>

</div>
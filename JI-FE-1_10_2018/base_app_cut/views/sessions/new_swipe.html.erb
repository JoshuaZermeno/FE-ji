<!-- START FLASH -->                     
<% if flash[:title] == "Error" %>
<div class="alert alert-danger"><%= flash[:notice] %><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span></button></div>
<% elsif flash[:title] == "Success" %>
<div class="alert alert-success"><%= flash[:notice] %><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span></button></div>
<% end %>
<!-- END FLASH -->
<div class="login-container" id="snow">

  <div class="login-box animated fadeInDown">
    <div class="login-logo"> <img src="/images/banner_logo.png" id="logo"></div>
    <div class="login-body">
      <div class="login-title"><strong>Log in</strong></div>
      <%= form_for(:session, url: login_swipe_path, html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <div class="col-md-12">
          <%= f.text_field :id_swiped, class: 'form-control', id: 'id_swiped', type: 'password', placeholder: "Touch here then swipe", autocomplete: "off" %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="login-footer">
      <div class="pull-left">
        
      </div>
      <div class="pull-right">
        <%= link_to "Login", controller: :sessions, action: :new %> | 
        <%= link_to "Reset Password", controller: :employees, action: :reset_password %>
      </div>
    </div>
  </div>

</div>
<div id="leaderboardsCarousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">

  	<% activated = true
  		@rankings.each do |k, v| %>
	    <div class="item <%= 'active' if activated %>">
   			<% activated = false %>
	      <div class="table-responsive">
	        <h4><%= k %></h4>
	        <table class="table table-striped table-condensed">
	          <thead>
	          <tr>
	            <th>Rank</th>
	            <th>Name</th>
	            <th>Bucks</th>
	          </tr>
	          </thead>
	          <tbody>
	          <%# rank = 1
	             v.each do |a| %>
	              <tr>
	                <td> <b><%#= rank %>.</b> </td>
	                <td> <%#= ::Employee.find(a.IDnum).full_name %> </td>
	                <td> <%#= a.bucks_count %> </td>
	              </tr>
	          <%# rank = rank + 1
	             end %>
	          </tbody>
	        </table>
	      </div>
	    </div>
    <% end %>
  </div>


  <div class="carousel-controls carousel-margin leader">
    <ol class="carousel-indicators">
    	<% activated = true
    	pos = 0
  			@rankings.each do |k, v| %>
      <li data-target="#leaderboardsCarousel" data-slide-to="<%= pos %>" class="<%= 'active' if activated %>"></li>
      <% activated = false 
      	pos = pos + 1 %>
      <% end %>
    </ol>
  </div>
</div>
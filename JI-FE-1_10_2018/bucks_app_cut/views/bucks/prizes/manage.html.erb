<% content_for :title, "Manage Prizes" %>

<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/prizes">Store</a></li>
    <li>Manage</li>
    <li>Prizes</li>              
</ul>
<!-- END BREADCRUMB -->  

<!-- START TITLE -->
<div class="page-title">                    
    <h2><span class="fa fa-desktop"></span> Manage Bucks Store Prizes</h2>
</div>
<!-- END TITLE -->

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap"> 

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive">
            <h4>Most Favorited</h4>
            <table class="table table-striped table-condensed">
              <thead>
              <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Favorited By</th>
              </tr>
              </thead>
              <tbody>
              <% rank = 1
                 @top_favorited.each do |a| %>
                  <tr>
                    <td> <b><%= rank %>.</b> </td>
                    <td> <%= a.name %> </td>
                    <td> <%= a.favorites_count %> </td>
                  </tr>
              <% rank = rank + 1
                 end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="table-responsive">
            <h4>Most Purchased</h4>
            <table class="table table-striped table-condensed">
              <thead>
              <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Purchases</th>
              </tr>
              </thead>
              <tbody>
              <% rank = 1
                 @top_purchased.each do |p| %>
                  <tr>
                    <td> <b><%= rank %>.</b> </td>
                    <td> <%= p.name %> </td>
                    <td> <%= p.purchases_count %> </td>
                  </tr>
              <% rank = rank + 1
                 end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>

  <%= form_tag (''), :method => 'get', :id => 'prize_search' do %>

  <div class="row">
    <div class="col-lg-10">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-body">
              <div class="col-md-3">
                <%= text_field_tag :id, params[:id], placeholder: 'Prize ID', class: 'form-control' %>
              </div>
              <div class="col-md-3">
                <%= text_field_tag :name, params[:name], placeholder: 'Name', class: 'form-control' %>
              </div>
              <div class="col-md-3">
                <%= select_tag :available, options_for_select([
                ['Available', 1],
                ['Unavailable', 0]]), class: 'form-control' %>
              </div>
              <div class="col-md-3">
                <%= submit_tag 'Search', id: 'search_prize_button', class: 'btn btn-primary' %>
                <a href="new"><div class="btn btn-primary">
                  New Prize
                </div></a>
              </div> 
            
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body" id = "prizes_table">
          <%= render 'prizes_manage' %>
        </div>
      </div>
    </div>
  </div>
</div>
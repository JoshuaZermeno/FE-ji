<div class="page-sidebar">
  <!-- START X-NAVIGATION -->
  <ul class="x-navigation">
      <li class="xn-logo" style="background-image: url('<%= image_path "bucks-logo-banner.png" %>')">
          <a href="#">TCOB Bucks</a>
          <a href="#" class="x-navigation-control"></a>
      </li>
      <li class="xn-profile">
          <a href="#" class="profile-mini">
              <%= image_tag @current_user.get_profile_picture %>
          </a>
          <div class="profile">
              <div class="profile-image">
                  <%= image_tag @current_user.get_profile_picture %>
              </div>
              <div class="profile-data">
                  <div class="profile-data-name"><%= @current_user.full_name %></div>
                  <div class="profile-data-title"><%= ::Job.find(@current_user.job_id).title %></div>
              </div>
          </div>                                                                        
      </li>


      <li class="xn-title">Navigation</li>
        <li>
            <a href="/bucks/"><span class="fa fa-home"></span> <span class="xn-text">Home</span></a>
        </li> 
        <li>
            <a href="/bucks/employees/<%= @current_user.IDnum %>"><span class="fa fa-user"></span> <span class="xn-text">Your Profile</span></a>
        </li>                   
        <li>
            <a href="/bucks/prizes"><span class="fa fa-shopping-cart"></span> <span class="xn-text">Bucks Store</span></a>
        </li>
        <li>
            <a href="/bucks/prizes/orders"><span class="fa fa-file-text-o"></span> <span class="xn-text">Your Orders</span></a>
        </li>
        <li>
            <a href="/bucks/favorites"><span class="fa fa-heart"></span> <span class="xn-text">Your Favorites</span></a>
        </li>                    
        <li class="xn-openable">
            <a href="#"><span class="fa fa-asterisk"></span> <span class="xn-text">Support</span></a>
            <ul>
              <li><a href="/bucks/report"><span class="fa fa-exclamation-circle"></span>Report Issue</a></li>
              <li><a href="/bucks/feedback"><span class="fa fa-comments"></span>Feedback</a></li>
            </ul>
        </li>
        <li><a href="/logout"><span class="fa fa-sign-out"></span><span class="xn-text">Logout</span></a></li>

    <% if @current_user.can_issue_bucks %>
      <li class="xn-title">Manage</li>
        <li>
          <a href="/bucks/bucks/new"><span class="fa fa-plus-circle"></span> <span class="xn-text">New Buck</span></a>
        </li>                    
        <li>
          <a href="/bucks/employees/analyze/<%= @current_user.IDnum %>"><span class="fa fa-book"></span> <span class="xn-text">Your Bucks Issued</span></a>
        </li>
    <% end %>
    <% if @current_user.can_view_dept %>
        <li>
          <a href="/bucks/employees/team"><span class="fa fa-users"></span> <span class="xn-text">Your Department</span></a>
        </li>
     <% end %>
    <% if @current_user.can_approve_bucks %>
        <li>
          <a href="/bucks/bucks/pending"><span class="fa fa-clock-o"></span> <span class="xn-text">Pending Approval</span></a>
          <% if @current_user.get_pending_bucks.count > 0 %>
            <div class="informer informer-primary"><%= @current_user.get_pending_bucks.count %></div>
          <% end %>
        </li> 
    <% end %>     
    <% if @current_user.can_view_all %>              
        <li>
          <a href="/bucks/bucks"><span class="fa fa-money"></span> <span class="xn-text">All Bucks</span></a>
        </li>
        <li>
          <a href="/bucks/employees"><span class="fa fa-male"></span> <span class="xn-text">All Employees</span></a>
        </li>
    <% end %>

    <% if @current_user.can_manage_inventory %>
      <li class="xn-title">Cashiers</li>
        <li>
          <a href="/bucks/purchase/start_purchase"><span class="fa fa-long-arrow-right"></span> <span class="xn-text">Begin Purchase</span></a>
        </li>                    
        <li>
          <a href="/bucks/purchase/manage"><span class="fa fa-usd"></span> <span class="xn-text">Manage Purchases</span></a>
        </li>
        <li>
          <a href="/bucks/prizes/manage"><span class="fa fa-gift"></span> <span class="xn-text">Manage Prizes</span></a>
        </li>                    
        <li>
          <a href="/bucks/admin/orders"><span class="fa fa-truck"></span> <span class="xn-text">Prize Orders</span></a>
          <% if @global_orders.count > 0 %>
            <div class="informer informer-primary"><%= @global_orders.count %></div>
          <% end %>
        </li>
    <% end %>

     <% if @current_user.has_admin_access %>

      <li class="xn-title">Admin</li>
        <li>
          <a href="/bucks/admin/control"><span class="fa fa-gears"></span> <span class="xn-text">Control Panel</span></a>
        </li>
        <li>
          <a href="/bucks/admin/bucks/analyze"><span class="fa fa-tachometer"></span> <span class="xn-text">Review Budgets</span></a>
        </li>      
        <li>
          <a href="/bucks/admin/reports"><span class="fa fa-bar-chart-o"></span> <span class="xn-text">Stats & Reporting</span></a>
        </li>              
        <li>
          <a href="/bucks/admin/logs/bucks"><span class="fa fa-pencil-square-o"></span> <span class="xn-text">Buck Logs</span></a>
        </li>                    
        <li>
          <a href="/bucks/admin/logs/store"><span class="fa fa-pencil-square-o"></span> <span class="xn-text">Store Logs</span></a>
        </li>
      <% end %>
  </ul>
  <!-- END X-NAVIGATION -->
</div>
